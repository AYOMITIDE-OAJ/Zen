<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.github.pakka_papad.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_nowPlaying"
            app:destination="@id/nowPlaying"
            app:enterAnim="@anim/enter_from_bottom"
            app:exitAnim="@anim/shrink_towards_top"
            app:popEnterAnim="@anim/grow_from_top"
            app:popExitAnim="@anim/exit_to_bottom" />
        <action
            android:id="@+id/action_homeFragment_to_playlistFragment"
            app:destination="@id/playlistFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_selectPlaylistFragment"
            app:destination="@id/selectPlaylistFragment" />
    </fragment>
    <fragment
        android:id="@+id/nowPlaying"
        android:name="com.github.pakka_papad.nowplaying.NowPlayingFragment"
        android:label="NowPlaying" >
    </fragment>
    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.github.pakka_papad.playlist.PlaylistFragment"
        android:label="PlaylistFragment" >
        <action
            android:id="@+id/action_playlistFragment_to_selectPlaylistFragment"
            app:destination="@id/selectPlaylistFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.github.pakka_papad.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.github.pakka_papad.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.github.pakka_papad.onboarding.OnBoardingFragment"
        android:label="OnBoardingFragment" >
        <action
            android:id="@+id/action_onBoardingFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/onBoardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/selectPlaylistFragment"
        android:name="com.github.pakka_papad.select_playlist.SelectPlaylistFragment"
        android:label="SelectPlaylistFragment" >
        <argument
            android:name="songLocation"
            app:argType="string"
            android:defaultValue='""' />
    </fragment>
</navigation>